{% extends 'base.html.twig' %}

{% block title %}Todo-Overview{% endblock %}

{% block body %}
    {% include('navbar.html.twig') %}
    <h1>Todo List</h1>
    <h3>Hello {{ user.shortname() }}</h3>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Due To</th>
                <th>Description</th>
                <th>From</th>
                <th>Edit</th>
                <th>Done</th>
            </tr>
        </thead>
        {% for todo in todos %}
            <tbody>
                <tr>
                    <td>{{ todo.id }}</td>
                    <td>{{ todo.name }}</td>
                    <td>{{ todo.dueto | date("m/d/Y") }}</td>
                    <td>{{ todo.description }}</td>
                    <td>{{ todo.getbelongsto() }}</td>
                    <td><a href="{{ path('todo_edit', {'id': todo.id}) }}">✏</a></td>
                    <td>
            {% if todo.done %}
                ✔️
            {% else  %}
                ❌
            {% endif %}

                    </td>
                </tr>
            </tbody>
        {% endfor %}
    </table>
    {% include('footer.html.twig') %}
{% endblock %}
